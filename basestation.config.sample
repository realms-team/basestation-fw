[basestation]
# Connection
serialport = /dev/ttyUSB3
tcpport = 8080

# Application
filecommitdelay = 60
sendperiodminutes = 1
fileperiodminutes = 1

# Security
token = DEFAULT_BASESTATIONTOKEN

# Files
crashlogfile = basestation.crashlog
backupfile = basestation.backup

[server]
# Connection
host = localhost:8081

# Security
token = DEFAULT_SERVERTOKEN
certfile = server.cert
